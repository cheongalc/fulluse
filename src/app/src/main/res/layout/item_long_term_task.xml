<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_taskName"
        android:layout_width="300dp"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Long Term Task Name"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="editLongTermTask"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_taskName"
        android:text="Long Term Task End Date"
        android:id="@+id/tv_taskEndDate"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_taskName"
        android:layout_alignBottom="@id/tv_taskEndDate"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_taskPriority"
            android:text="!!!"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/cardview_default_title_textColor"/>

        <ImageView
            android:id="@+id/iv_deleteTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="completeLongTermTask"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:clickable="true" />

    </LinearLayout>






</RelativeLayout>
