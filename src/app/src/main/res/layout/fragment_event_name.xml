<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/tv_eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Event Title"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/fragment_task_title"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_task_seed"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_eventTitle"
        android:layout_margin="32dp" />

    <EditText
        android:id="@+id/et_eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_eventTitle"
        android:layout_margin="16dp"
        android:textColor="@color/textColorPrimary"
        android:hint="Enter title here..."
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:inputType="text"
        android:maxLines="1"/>

</RelativeLayout>